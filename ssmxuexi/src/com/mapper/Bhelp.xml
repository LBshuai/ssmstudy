<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.mapper.BhelpMapper">
		<resultMap type="Bhelp" id="bhelpResult">
			<id property="id" column="id"/>
			<result property="title" column="title"/>
			<result property="neirong" column="neirong"/>
		</resultMap>
		<insert id="insert" parameterType="Bhelp">
			insert into bhelp (title,neirong) values (#{title},#{neirong})
		</insert>
		<update id="update" parameterType="Bhelp">
			update bhelp set title=#{title},neirong=#{neirong} where id=#{id}
		</update>
		<delete id="delete" parameterType="Bhelp">
			delete from bhelp where id= #{id}
		</delete>
		<select id="list" resultType="Bhelp" resultMap="bhelpResult">
			select * from  bhelp where 1=1 ${where} order by id desc
			</select>
		<select id="sealist" resultType="Bhelp" resultMap="bhelpResult">
			select * from  bhelp where 1=1 ${where} 
			</select>
		<select id="get" parameterType="_int" resultType="Bhelp">
			select * from  Bhelp  where id= #{id}
		</select>
			<select id="total" resultType="int">
	        select count(*) from bhelp    
	    </select>
<update id="updatesql"  parameterType="String">
${value}
</update>
<delete id="deletesql"  parameterType="String">
${value}  
</delete>
	</mapper>