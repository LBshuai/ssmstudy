<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.mapper.TeacherMapper">
		<resultMap type="Teacher" id="teacherResult">
			<id property="id" column="id"/>
			<result property="name" column="name"/>
			<result property="sex" column="sex"/>
			<result property="pic" column="pic"/>
			<result property="tel" column="tel"/>
			<result property="username" column="username"/>
			<result property="pwd" column="pwd"/>
		</resultMap>
		<insert id="insert" parameterType="Teacher">
			insert into teacher
			<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null">name,</if>
			<if test="sex != null">sex,</if>
			<if test="pic != null">pic,</if>
			<if test="tel != null">tel,</if>
			<if test="username != null">username,</if>
			<if test="pwd != null">pwd,</if>
			</trim>
			<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null">#{name},</if>
			<if test="sex != null">#{sex},</if>
			<if test="pic != null">#{pic},</if>
			<if test="tel != null">#{tel},</if>
			<if test="username != null">#{username},</if>
			<if test="pwd != null">#{pwd},</if>
			</trim>
		</insert>
		<update id="update" parameterType="Teacher">
			update teacher
			<trim prefix="set" suffixOverrides=",">
			<if test="name != null">name=#{name},</if>
			<if test="sex != null">sex=#{sex},</if>
			<if test="pic != null">pic=#{pic},</if>
			<if test="tel != null">tel=#{tel},</if>
			<if test="username != null">username=#{username},</if>
			<if test="pwd != null">pwd=#{pwd},</if>
		</trim>
			where id=#{id}
		</update>
		<delete id="delete" parameterType="Teacher">
			delete from teacher where id= #{id}
		</delete>
		<select id="list" resultType="Teacher" resultMap="teacherResult">
			select * from  teacher where 1=1 ${where} order by id desc
			</select>
		<select id="sealist" resultType="Teacher" resultMap="teacherResult">
			select * from  teacher where 1=1 ${where} 
			</select>
		<select id="get" parameterType="_int" resultType="Teacher">
			select * from  Teacher  where id= #{id}
		</select>
			<select id="total" resultType="int">
	        select count(*) from teacher    
	    </select>
<update id="updatesql"  parameterType="String">
${value}
</update>
<delete id="deletesql"  parameterType="String">
${value}  
</delete>
	</mapper>