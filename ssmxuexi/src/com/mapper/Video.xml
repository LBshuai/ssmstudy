<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.mapper.VideoMapper">
		<resultMap type="Video" id="videoResult">
			<id property="id" column="id"/>
			<result property="name" column="name"/>
			<result property="fujian" column="fujian"/>
			<result property="kinfo" column="kinfo"/>
			<result property="jieshao" column="jieshao"/>
			<result property="uname" column="uname"/>
			<result property="addtime" column="addtime"/>
			<association property="kinfo" column="kinfofk" select="com.mapper.KinfoMapper.get">
			</association>
		</resultMap>
		<insert id="insert" parameterType="Video">
			insert into video
			<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null">name,</if>
			<if test="fujian != null">fujian,</if>
			<if test="kinfo != null">kinfo,</if>
			<if test="jieshao != null">jieshao,</if>
			<if test="uname != null">uname,</if>
			<if test="addtime != null">addtime,</if>
			</trim>
			<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null">#{name},</if>
			<if test="fujian != null">#{fujian},</if>
			<if test="kinfo != null">#{kinfo},</if>
			<if test="jieshao != null">#{jieshao},</if>
			<if test="uname != null">#{uname},</if>
			<if test="addtime != null">#{addtime},</if>
			</trim>
		</insert>
		<update id="update" parameterType="Video">
			update video
			<trim prefix="set" suffixOverrides=",">
			<if test="name != null">name=#{name},</if>
			<if test="fujian != null">fujian=#{fujian},</if>
			<if test="kinfo != null">kinfo=#{kinfo},</if>
			<if test="jieshao != null">jieshao=#{jieshao},</if>
			<if test="uname != null">uname=#{uname},</if>
			<if test="addtime != null">addtime=#{addtime},</if>
		</trim>
			where id=#{id}
		</update>
		<delete id="delete" parameterType="Video">
			delete from video where id= #{id}
		</delete>
		<select id="list" resultType="Video" resultMap="videoResult">
			select * from  video where 1=1 ${where} order by id desc
			</select>
		<select id="sealist" resultType="Video" resultMap="videoResult">
			select * from  video where 1=1 ${where} 
			</select>
		<select id="get" parameterType="_int" resultType="Video">
			select * from  Video  where id= #{id}
		</select>
			<select id="total" resultType="int">
	        select count(*) from video    
	    </select>
<update id="updatesql"  parameterType="String">
${value}
</update>
<delete id="deletesql"  parameterType="String">
${value}  
</delete>
	</mapper>